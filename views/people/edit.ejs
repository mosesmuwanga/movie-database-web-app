<% layout('layouts/boilerplate') %>

<div class="row mt-3">

    <div class="col-md-4 offset-md-4">
        <div class="card shadow mb-4">
            <div class="card-body">
                <div class="justify-content-center">
                    <h1 class="card-title text-center mb-4 mt-1"> Editing <%= person.name %></h1>
                    <a href="/people/<%=person.id%>">Back to <%= person.name %> </a>
                    <form action="/people/<%=person._id%>?_method=PUT" method="POST" class="valid-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="title">New Movie Title</label>
                            <input class="form-control" type="text" name="person[title]" value="<%= person.title %>"
                                required>
                            <div class="valid-feedback">Looks Good!</div>
                            <div class="invalid-feedback">Please enter a movie!</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="poster">Photo URL</label>
                            <input class="form-control" type="text" name="person[photo]" value="<%= person.photo %> ">
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-outline-success btn-block">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>