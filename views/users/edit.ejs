<% layout('layouts/boilerplate') %>


<div class="mt-5 mb-5">
    <div class="card col-md-6 offset-xl-4 offset-md-3 col-xl-4 card shadow">
        <article class="card-body">
            <h1 class="card-title text-center mb-4 mt-1">Editing</h1>
            <a href="/users/<%= user._id %> ">Back to Profile</a>
            <form action="/users/<%=user._id%>?_method=PUT" method="POST" class="valid-form" novalidate>
                <div class="form-group">
                    <label class="form-label" for="bio">Bio</label>
                    <textarea class="form-control" type="text" id="bio" name="bio"
                        placeholder="Tell about yourself..."><%= user.bio %></textarea>
                </div>
                <div class="form-group">
                    <label class="form-label" for="photo">Change Profile Photo URL</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-link"></i> </span>
                        </div>
                        <input class="form-control" type="text" id="photo" name="photo" value="<%= user.photo %> ">
                    </div>
                </div>
                <% if (user.isContributing){ %>
                <div class="form-group">
                    <label class="form-label" for="account">Change Account Type</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="account" id="regular" value="regular">
                        <label class="form-check-label" for="regular">
                            Regular
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="account" id="contributing"
                            value="contributing" checked>
                        <label class="form-check-label" for="contributing">
                            Contributing
                        </label>
                    </div>
                </div>
                <% } else { %>
                <div class="form-group">
                    <label class="form-label" for="account">Change Account Type</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="account" id="regular" value="regular"
                            checked>
                        <label class="form-check-label" for="regular">
                            Regular
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="account" id="contributing"
                            value="contributing">
                        <label class="form-check-label" for="contributing">
                            Contributing
                        </label>
                    </div>
                </div>
                <% } %>
                <div class="form-group">
                    <button type="button" class="btn btn-outline-primary btn-block" data-toggle="modal"
                        data-target="#accountTypes">
                        Account Types
                    </button>
                </div>
                <div class="mb-3">
                    <button class="btn btn-outline-success btn-block">Update</button>
                </div>
            </form>



            <!-- Modal -->
            <div class="modal fade" id="accountTypes" tabindex="-1" role="dialog" aria-labelledby="accountTypesTitle"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Account Types</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <label for="regular">Regular User</label>
                            <ul id="regular">
                                <li>Add movie reviews</li>
                                <li>Follow users</li>
                                <li>Follow cast and crew members</li>
                            </ul>
                            <label for="contributing">Contributing User</label>
                            <ul id="contributing">
                                <li>All regular user functions</li>
                                <li>Add new movies to the database</li>
                                <li>Add new cast and crew members to the database</li>
                                <li>Add addition information to existing content</li>
                            </ul>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </article>
    </div>
</div>