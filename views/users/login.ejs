<% layout('layouts/boilerplate') %>

<div class="mt-5">
    <div class="card col-md-6 offset-xl-4 offset-md-3 col-xl-4 card shadow">
        <article class="card-body">
            <h1 class="card-title text-center mb-4 mt-1">Login</h1>
            <form action="/login" method="POST" class="valid-form" novalidate>
                <div class="form-group">
                    <label class="form-label" for="username">Username</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                        </div>
                        <input class="form-control" type="text" id="username" name="username" placeholder="username123"
                            required>
                        <div class="valid-feedback">Looks Good!</div>
                        <div class="invalid-feedback">Please enter your username!</div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label" for="password">Password</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                        </div>
                        <input class="form-control" type="password" id="password" name="password" placeholder="********"
                            required>
                        <div class="valid-feedback">Looks Good!</div>
                        <div class="invalid-feedback">Please enter your password!</div>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-success btn-block"> Login </button>
                </div>
                <p class="text-center"><a href="#" class="btn">Forgot password?</a></p>
            </form>
        </article>
    </div>
</div>