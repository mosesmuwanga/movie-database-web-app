<% layout('layouts/boilerplate') %>

<link rel="stylesheet" type="text/css" href="/css/movies.css">
<div class="container">
    <header class="jumbotron text-center">
        <div class="container">
            <h1>MVDB Members</h1>
            <p>Select a user to view more information or search for a specific user.<p>
                    <div>
                        <p>
                            <form action="/users" method="GET" class="form-inline justify-content-center">
                                <div class="form-group">
                                    <input class="form-control" type="text" name="search" placeholder="movieLover...">
                                    <input class="btn btn-outline-success" type="submit" value="Search">
                                </div>
                            </form>
                        </p>
                    </div>
        </div>
    </header>
    <div class="container">
        <br>
        <div class="row justify-content-center" style="display:flex; flex-wrap:wrap;">
            <% for( user of users ) {%>
            <div class="card movie_card">
                <% if(user.photo === '') { %>
                <img src="https://twirpz.files.wordpress.com/2015/06/twitter-avi-gender-balanced-figure.png?w=640"
                    class="rounded mx-auto d-block img-thumbnail" alt="Default Profile Picture">
                <% } else { %>
                <img src="<%= user.photo %>" class="rounded mx-auto d-block img-thumbnail"
                    alt="<%= user.username %> Photo">
                <% } %>
                <div class="card-body">
                    <h5 class="card-title"><%= user.username %></h5>
                    <a href="users/<%= user._id %> " class="btn btn-outline-primary btn-block">View More</a>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>